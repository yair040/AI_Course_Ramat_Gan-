# Gmail Event Scanner Configuration
# Author: Yair Levi
# 
# IMPORTANT: Configure ONE search criterion before running
# All other criteria should remain empty or false

# ============================================================================
# GMAIL SEARCH CRITERIA
# ============================================================================
# Configure EXACTLY ONE of the following search options:

search_criteria:
  # Search for emails with specific words in the subject line
  # Example: "meeting", "invitation", "event"
  subject_keyword: "meeting before vacation"
  
  # Search for emails from a specific sender
  # Example: "boss@company.com", "calendar@example.com"
  sender_email: ""
  
  # Search for emails with a specific Gmail label
  # Example: "important", "meetings", "events"
  label: ""
  
  # Search only for unread emails
  # Set to true to only process unread emails
  # Set to false to process all emails (read and unread)
  unread_only: false

# ============================================================================
# POLLING CONFIGURATION
# ============================================================================
# Settings for continuous polling mode

polling:
  # Time interval between scans in seconds
  # Default: 300 (5 minutes)
  # Recommended: 300-900 (5-15 minutes)
  scan_interval_seconds: 300

# ============================================================================
# CALENDAR CONFIGURATION
# ============================================================================
# Settings for Google Calendar integration

calendar:
  # Timezone for calendar events
  # Use standard timezone names (e.g., "UTC", "America/New_York", "Europe/London")
  # Default: "UTC"
  timezone: "UTC"

# ============================================================================
# SYSTEM CONFIGURATION (Advanced)
# ============================================================================
# Generally, you don't need to modify these settings

system:
  # Logging level: DEBUG, INFO, WARNING, ERROR, CRITICAL
  # Default: INFO
  log_level: "INFO"
  
  # Maximum number of emails to process per scan
  # Prevents overwhelming the system with too many emails
  # Default: 50
  max_emails_per_scan: 50
  
  # Number of retry attempts for API calls
  # Default: 3
  api_retry_attempts: 3
  
  # Enable multiprocessing for email parsing
  # Set to true for faster processing of multiple emails
  # Default: true
  enable_multiprocessing: true
  
  # Maximum number of parallel processes
  # Default: 4
  max_workers: 4

# ============================================================================
# EXAMPLE CONFIGURATIONS
# ============================================================================
# 
# Example 1: Search for unread meeting invitations
# search_criteria:
#   subject_keyword: "meeting"
#   sender_email: ""
#   label: ""
#   unread_only: true
#
